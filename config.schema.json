{
  "pluginAlias": "HomebridgeSems",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "hostname": {
        "title": "Remote Hostname",
        "type": "string",
        "required": true,
        "default": "https://www.semsportal.com/"
      },
      "email": {
        "title": "E-mail",
        "type": "string",
        "required": true,
        "default": "your@example.com"
      },
      "password": {
        "title": "Password",
        "type": "string",
        "required": true,
        "default": "***"
      },
      "powerStationIds": {
        "title": "Power Station IDs",
        "type": "array",
	      "required": true,
        "items": {
          "title": "Power Station ID",
          "description": "UUIID found in: https://www.semsportal.com/PowerStation/PowerStatusSnMin/<power-station-uuid>",
          "type": "string"
        }
      },
      "showCurrentPowerLevel": {
        "title": "Show current power level (Watt)",
        "type": "boolean",
        "required": true,
        "default": true
      },
      "showDayTotal": {
        "title": "Show total Day generation (Watt)",
        "type": "boolean",
        "required": true,
        "default": true
      },
      "showInternalTemperature": {
        "title": "Show Internal Temperature (degrees C)",
        "type": "boolean",
        "required": true,
        "default": true
      }
    }
  }
}