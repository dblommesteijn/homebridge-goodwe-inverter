{
  "pluginAlias": "HomebridgeGoodWeInverter",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "localIps": {
        "title": "Local Inverters",
        "type": "array",
	      "required": true,
        "items": {
          "type": "object",
          "properties": {
            "localIp": {
              "title": "Local IP",
              "type": "string",
              "required": true,
              "default": "192.168.x.x"
            },
            "port": {
              "title": "Port",
              "type": "string",
              "required": true,
              "default": "8899"
            },
            "timeout": {
              "title": "Timeout",
              "type": "integer",
              "required": true,
              "default": 1000
            },
            "options": {
              "title": "Options",
              "type": "string",
              "required": true,
              "default": "0x7f0375940049d5c2"
            }
          }
        }
      },
      "SFKLocation": {
        "title": "Location of sfk",
        "type": "string",
        "required": true,
        "default": "/usr/bin/sfk"
      },
      "showCurrentPowerLevel": {
        "title": "Show current power level (Watt)",
        "type": "boolean",
        "required": true,
        "default": true
      },
      "showDayTotal": {
        "title": "Show total Day generation (Watt)",
        "type": "boolean",
        "required": true,
        "default": true
      },
      "showInternalTemperature": {
        "title": "Show Internal Temperature (degrees C)",
        "type": "boolean",
        "required": true,
        "default": true
